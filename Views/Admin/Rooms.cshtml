@model List<Room>
@{
    ViewData["Title"] = "Управление на стаи";
}

<h2>Управление на стаи</h2>
<hr />

<div class="mb-3">
    <a asp-action="CreateRoom" class="btn btn-primary">Добави нова стая</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Тип</th>
                    <th>Описание</th>
                    <th>Цена/нощ</th>
                    <th>Капацитет</th>
                    <th>Статус</th>
                    <th>Снимка</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>@room.RoomNumber</td>
                        <td>@room.RoomType</td>
                        <td>@(room.Description.Length > 50 ? room.Description.Substring(0, 50) + "..." : room.Description)</td>
                        <td>@room.PricePerNight.ToString("C")</td>
                        <td>@room.Capacity</td>
                        <td>
                            @if (room.IsAvailable)
                            {
                                <span class="badge bg-success">Налична</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Заета</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(room.ImageUrl))
                            {
                                <img src="@Url.Content(room.ImageUrl)" alt="@room.RoomNumber" style="max-width: 50px; max-height: 50px;" />
                            }
                            else
                            {
                                <span class="text-muted">Няма</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditRoom" asp-route-id="@room.Id" class="btn btn-sm btn-warning">Редактирай</a>
                            <form asp-action="DeleteRoom" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@room.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Сигурни ли сте, че искате да изтриете тази стая?')">Изтрий</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Няма добавени стаи.
    </div>
}

