@model Booking
@{
    ViewData["Title"] = "Потвърждение";
}

<div class="text-center">
    <div class="alert alert-success">
        <h2>✅ Резервацията е потвърдена!</h2>
    </div>
    
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title">Детайли за резервацията</h4>
            <hr />
            <p><strong>Номер на резервация:</strong> #@Model.Id</p>
            <p><strong>Стая:</strong> @Model.Room.RoomNumber - @Model.Room.RoomType</p>
            <p><strong>Настаняване:</strong> @Model.CheckInDate.ToString("dd.MM.yyyy")</p>
            <p><strong>Напускане:</strong> @Model.CheckOutDate.ToString("dd.MM.yyyy")</p>
            <p><strong>Брой гости:</strong> @Model.NumberOfGuests</p>
            <p><strong>Обща сума:</strong> <span class="text-success fs-5">@Model.TotalPrice.ToString("C")</span></p>
            
            @if (Model.Payment != null)
            {
                <hr />
                <p><strong>Метод на плащане:</strong> @Model.Payment.PaymentMethod</p>
                <p><strong>Статус на плащането:</strong> 
                    @if (Model.Payment.Status == PaymentStatus.Completed)
                    {
                        <span class="badge bg-success">Платено</span>
                    }
                </p>
                <p><strong>Номер на транзакция:</strong> @Model.Payment.TransactionId</p>
            }
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="MyBookings" class="btn btn-primary">Моите резервации</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Начало</a>
    </div>
</div>

