@model List<Booking>
@{
    ViewData["Title"] = "Моите резервации";
}

<h2>Моите резервации</h2>
<hr />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Стая</th>
                    <th>Настаняване</th>
                    <th>Напускане</th>
                    <th>Гости</th>
                    <th>Сума</th>
                    <th>Статус</th>
                    <th>Плащане</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>#@booking.Id</td>
                        <td>@booking.Room.RoomNumber - @booking.Room.RoomType</td>
                        <td>@booking.CheckInDate.ToString("dd.MM.yyyy")</td>
                        <td>@booking.CheckOutDate.ToString("dd.MM.yyyy")</td>
                        <td>@booking.NumberOfGuests</td>
                        <td>@booking.TotalPrice.ToString("C")</td>
                        <td>
                            @switch (booking.Status)
                            {
                                case BookingStatus.Pending:
                                    <span class="badge bg-warning">Изчаква</span>
                                    break;
                                case BookingStatus.Confirmed:
                                    <span class="badge bg-success">Потвърдена</span>
                                    break;
                                case BookingStatus.Cancelled:
                                    <span class="badge bg-danger">Отменена</span>
                                    break;
                                case BookingStatus.Completed:
                                    <span class="badge bg-info">Завършена</span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (booking.Payment != null)
                            {
                                @if (booking.Payment.Status == PaymentStatus.Completed)
                                {
                                    <span class="badge bg-success">Платено</span>
                                }
                                else if (booking.Payment.Status == PaymentStatus.Refunded)
                                {
                                    <span class="badge bg-info">Върнато</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Изчаква</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">Няма</span>
                            }
                        </td>
                        <td>
                            @if (booking.Status == BookingStatus.Confirmed || booking.Status == BookingStatus.Pending)
                            {
                                <form asp-action="Cancel" method="post" class="d-inline">
                                    <input type="hidden" name="bookingId" value="@booking.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Сигурни ли сте, че искате да отмените резервацията?')">Отмени</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Нямате резервации.
    </div>
    <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary">Прегледайте стаите</a>
}

